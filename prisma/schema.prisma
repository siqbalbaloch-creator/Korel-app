// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Plan {
  FREE
  PRO
  ENTERPRISE
}

enum ToneType {
  MEASURED
  BOLD
  DIRECT
  ACADEMIC
  FRIENDLY
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?

  role           String    @default("user")

  accounts         Account[]
  sessions         Session[]
  packs            AuthorityPack[]
  supportTickets   SupportTicket[]
  subscription     Subscription?
  usage            Usage[]
  authorityProfile AuthorityProfile?
  waitlistEntries  WaitlistEntry[]

  createdAt DateTime @default(now())
}

model AuthorityProfile {
  id             String    @id @default(cuid())
  userId         String    @unique
  coreThesis     String?
  positioning    String?
  targetAudience String?
  tone           ToneType  @default(MEASURED)
  toneNotes      String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Subscription {
  id               String    @id @default(cuid())
  userId           String    @unique
  stripeCustomerId String?   @unique
  stripeSubId      String?   @unique
  plan             Plan      @default(FREE)
  status           String    @default("none")
  currentPeriodEnd DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Usage {
  id        String   @id @default(cuid())
  userId    String
  month     Int
  year      Int
  packsUsed Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, month, year])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model SupportTicket {
  id        String   @id @default(cuid())
  userId    String
  subject   String
  message   String
  status    String   @default("open")
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum InputType {
  INTERVIEW
  PRODUCT_UPDATE
  INVESTOR_UPDATE
  STRATEGY_MEMO
  CUSTOMER_STORY
  CUSTOM
}

enum AngleType {
  THOUGHT_LEADERSHIP
  TACTICAL
  CONTRARIAN
  STORY_DRIVEN
  VISIONARY
  EXECUTION_FOCUSED
}

model AuthorityPack {
  id                String    @id @default(cuid())
  title             String
  originalInput     String
  userId            String
  inputType         InputType @default(INTERVIEW)
  angle             AngleType @default(THOUGHT_LEADERSHIP)
  coreThesis        Json?
  strategicHooks    Json?
  highLeveragePosts Json?
  insightBreakdown  Json?
  repurposingMatrix Json?
  executiveSummary  Json?
  strategicMap      Json?
  messagingStrength Json?
  authorityConsistency Json?
  published         Boolean   @default(false)
  publishedAt       DateTime?
  regenerationCount Int       @default(0)
  lastGeneratedAt   DateTime  @default(now())
  qualityScore      Float?
  qualityBreakdown  Json?
  status            String    @default("draft")
  createdAt         DateTime  @default(now())

  user      User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  repurposes AuthorityPackRepurpose[]
}

model AuthorityPackRepurpose {
  id        String   @id @default(cuid())
  packId    String
  type      String
  content   Json
  createdAt DateTime @default(now())

  pack AuthorityPack @relation(fields: [packId], references: [id], onDelete: Cascade)
}

model PricingInterest {
  id        String   @id @default(cuid())
  name      String
  email     String
  plan      String
  createdAt DateTime @default(now())
}

model PricingClick {
  id        String   @id @default(cuid())
  plan      String
  createdAt DateTime @default(now())
}

enum WaitlistPlan {
  STARTER
  PROFESSIONAL
  ENTERPRISE
}

enum WaitlistSource {
  PRICING
  NAVBAR
  UPGRADE
  UNKNOWN
}

enum WaitlistStatus {
  ACTIVE
  CONTACTED
  CONVERTED
  REMOVED
}

enum WaitlistInterestQuality {
  UNREVIEWED
  LOW
  MEDIUM
  HIGH
}

model WaitlistEntry {
  id              String                  @id @default(cuid())
  email           String
  fullName        String?
  plan            WaitlistPlan
  source          WaitlistSource          @default(PRICING)
  userId          String?
  submitCount     Int                     @default(1)
  lastSubmittedAt DateTime                @default(now())
  status          WaitlistStatus          @default(ACTIVE)
  interestQuality WaitlistInterestQuality @default(UNREVIEWED)
  notes           String?
  createdAt       DateTime                @default(now())
  updatedAt       DateTime                @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@unique([email, plan])
  @@index([plan])
  @@index([status])
  @@index([createdAt])
  @@index([lastSubmittedAt])
}

model MarketingEvent {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  sessionId   String
  userId      String?
  path        String
  referrer    String?
  utmSource   String?
  utmMedium   String?
  utmCampaign String?
  eventType   String
  meta        Json?

  @@index([eventType])
  @@index([createdAt])
  @@index([sessionId])
}
